#include <stdio.h>
#include <stdlib.h>

int main()
{
    int num;
    printf("Insert a number : ");
    scanf("%d",&num);
    for(int i=1;i<=num;i++)
    {
        for(int j=num;j>=i+1;j--)
        {
            printf(" ");
        }
        for(int j=1;j<=i;j++)
        {
            printf("%d",i);
            printf(" ");
        }
        printf("\n");
    }
    return 0;
}
