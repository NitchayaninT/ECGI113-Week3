#include <stdio.h>
#include <stdlib.h>

int main()
{
    int num;
    printf("Insert a number : ");
    scanf("%d",&num);
    for(int i=0;i<num;i++)
    {
        for(int j=num;j>=i+2;j--)
        {
            printf(" ");
        }
        for(int j=0;j<=i;j++)
        {
            printf("*");
        }
        for(int j=0;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    for(int i=0;i<num;i++)
    {
        if(i!=0)
        {
            for(int j=1;j<=i;j++)
            {
                printf(" ");
            }
        }
        for(int j=num;j>=i+1;j--)
        {
            printf("*");
        }
        for(int j=num;j>=i+1;j--)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
